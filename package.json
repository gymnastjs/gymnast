{
  "name": "flex",
  "version": "1.0.0",
  "description": "Flexbox-based column layout system",
  "main": "index.js",
  "repository": {},
  "author": "Oscar Bartra",
  "license": "MIT",
  "devDependencies": {
    "@storybook/addon-storyshots": "3.0.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "20.0.3",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-object-rest-spread": "6.23.0",
    "commitizen": "2.9.6",
    "css-loader": "0.28.4",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "15.0.1",
    "eslint-config-prettier": "2.1.1",
    "eslint-plugin-import": "2.3.0",
    "eslint-plugin-jsx-a11y": "5.0.3",
    "eslint-plugin-react": "7.0.1",
    "husky": "0.13.4",
    "jest": "20.0.4",
    "lint-staged": "3.5.1",
    "npm-run-all": "4.0.2",
    "perfectionist": "2.4.0",
    "postcss-cli": "4.0.0",
    "postcss-cssnext": "2.11.0",
    "postcss-for": "2.1.1",
    "postcss-loader": "2.0.5",
    "prettier": "1.3.1",
    "react-test-renderer": "15.5.4",
    "regenerator-runtime": "0.10.5",
    "style-loader": "0.18.1",
    "stylelint": "7.10.1"
  },
  "lint-staged": {
    "*.js": [
      "format:js",
      "git add"
    ],
    "*.css": [
      "format:css",
      "git add"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/test/__mocks__/styleMock.js"
    }
  },
  "scripts": {
    "build": "postcss -c postcss.config.js -o dist/flex.build.css src/flex.css",
    "commit": "git-cz",
    "format-all:css": "git ls-files *.css | xargs yarn format:css",
    "format-all:js": "git ls-files *.js | xargs yarn format:js",
    "format-all": "npm-run-all --parallel format-all:*",
    "format:css": "./scripts/formatcss.sh",
    "format:js": "prettier --write --single-quote --no-semi --trailing-comma es5",
    "lint:css": "stylelint src/*.css stories/*.css",
    "lint:js": "eslint src stories storybook",
    "lint": "npm-run-all --parallel lint:*",
    "precommit": "lint-staged",
    "start": "start-storybook -p 9001 -c storybook",
    "test": "jest"
  },
  "dependencies": {
    "@storybook/addon-knobs": "3.0.0",
    "@storybook/addon-notes": "3.0.0",
    "@storybook/react": "3.0.0",
    "prop-types": "15.5.10",
    "react": "15.5.4",
    "react-dom": "15.5.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
