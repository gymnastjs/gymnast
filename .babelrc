{
  "presets": [
    [
      "env",
      {
        "targets": {
          "browsers": ["last 2 versions", "ie >= 11"]
        }
      }
    ],
    "react"
  ],
  "plugins": [
    "preval",
    "macros",
    "flow-react-proptypes",
    "lodash",
    "transform-object-rest-spread",
    "transform-class-properties",
    [
      "transform-runtime",
      {
        "helpers": false,
        "polyfill": false,
        "regenerator": false
      }
    ],
    [
      "module-resolver",
      {
        "alias": {
          "xflex": "./dist/xflex"
        }
      }
    ]
  ],
  "env": {
    "test": {
      "plugins": [
        [
          "module-resolver",
          {
            "alias": {
              "xflex": "./src/xflex"
            }
          }
        ]
      ]
    }
  }
}
