{
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react",
    "plugin:flowtype/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "jest": true,
    "jasmine": true
  },
  "plugins": ["react", "flowtype"],
  "settings": {
    "react": {
      "version": "15.5"
    }
  },
  "parser": "babel-eslint",
  "rules": {
    "no-console": 2,
    "no-plusplus": 0,
    "jsx-a11y/href-no-hash": 0,
    "react/prop-types": 0,
    "react/no-deprecated": 2,
    "react/jsx-filename-extension": 0,
    "react/require-default-props": 0,
    "import/no-extraneous-dependencies": 0,
    "import/extensions": 0,
    "import/no-unresolved": [
      2,
      {
        "ignore": ["gymnast"]
      }
    ],
    "no-use-before-define": ["error", "nofunc"],
    "flowtype/define-flow-type": 2
  }
}
